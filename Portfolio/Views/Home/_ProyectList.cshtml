@model IEnumerable<Proyect>

<div class="container">
    @if (Model is not null)
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var proyect in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@proyect.ImageUrl" class="card-img-top img-fluid" alt="Imagen proyecto @proyect.Title" />
                        <div class="card-body">
                            <h5 class="card-title">@proyect.Title</h5>
                            <p class="card-text text-break">@proyect.Description</p>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary" href="@proyect.Link" target="_blank"
                               rel="noopener noreferrer">Visitar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    } else
    {
        <div class="text-center">
            <p class="text-danger">Actualmente no hay proyectos para mostrar.</p>
        </div>
    }
</div>